extends ./layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Cacho
            span.font-normal Porra
        h2.text-center.text-2xl.font-extrabold=pagina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                table(class='w-full')
                    thead
                        tr
                            th(class='py-2 text-left')
                            th(class='py-2 text-left')
                            th(class='py-2 text-left')
                    tbody
                        each partido in partidos
                            tr 
                                td.py-2
                                    div.flex.gap-x-3.justify-end
                                        p(class='text-sm font-semibold leading-6 text-gray-900')= partido.equipo1
                                        img.h-5.w-5.bg-gray-50(src= partido.imgEq1, alt= partido.equipo1)

                                td.py-2
                                    div(class='flex flex-col')
                                        p(class='text-sm leading-6 text-gray-900 text-center')= partido.resultado
                                        p(class='text-xs leading-5 text-gray-500 text-center')= partido.estado

                                td.py-2
                                    div.flex.gap-x-3
                                        img.h-5.w-5.bg-gray-50(src= partido.imgEq2, alt= partido.equipo2)
                                        p(class='text-sm font-semibold leading-6 text-gray-900')= partido.equipo2
















